<!-- common.xml: Referenced by various build.xml files, this file
     defines common properties, paths, and also contains some common targets. 
     root.dir property must be set before this file is included. 
     This file automatically sets the following properties: 
       build.dir, classes.dir
     To change the value of these properties for your project, you need to set them
     BEFORE you include this file. You can do that by defining the property in 
     <user.home>/bpcatalog.properties, build.properties, <root.dir>/build.properties
     or in the build.xml file.
-->
<project name="common-ant" default="dummy-default">

  <property value="1.5" name="default.javac.source"/>
  <property value="1.5" name="default.javac.target"/>

  <condition property="from-netbeans">
    <available classname="junit.framework.Test"/>
  </condition>

  <condition property="from-command-line">
    <not>
      <available classname="junit.framework.Test"/>
    </not>
  </condition>

  <condition property="common-ant-tasks-file" value="${ant.file}/../nbproject/build-impl.xml">
    <isset property="from-netbeans"/>
  </condition>
  
  <condition property="common-ant-tasks-file" value="${ant.file.common-ant}/../command-line-ant-tasks.xml">
    <isset property="from-command-line"/>
  </condition>

  <import file="${common-ant-tasks-file}"/>
  
  <target name="dummy-default"/>
</project>
