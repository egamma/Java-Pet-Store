<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/j2ee/web-facesconfig_1_2.xsd"
    version="1.2">


   <lifecycle>
       <phase-listener>com.sun.javaee.blueprints.wrapper.AjaxWrapperPhaseListener</phase-listener>
   </lifecycle>
   
   <component>
    <description>
      Represents an AJAX Wrapper
    </description>
    <display-name>Ajax Wrapper</display-name>
    <component-type>AjaxWrapper</component-type>
    <component-class>com.sun.javaee.blueprints.wrapper.AjaxWrapper</component-class>    
    <component-extension>
      <renderer-type>AjaxWrapperType</renderer-type>
    </component-extension>
  </component> 

  <!-- Custom Renderers -->

  <render-kit>
    <description>
    	  Renderkit implementation for the ajax jsf components
    </description>
    <renderer>
      <component-family>AjaxWrapper</component-family>
      <renderer-type>AjaxWrapper</renderer-type>
      <renderer-class>com.sun.javaee.blueprints.wrapper.AjaxWrapperRenderer</renderer-class>
    </renderer>
 </render-kit>

</faces-config>

